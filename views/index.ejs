<!--index.ejs-->
<%- include("partials/header.ejs") %>

<div id="main-content" class="main-content">
  <div id="content" class="content">
    <div id="index" class="index">
    <% if(postList.length > 0) { %>
      <% for(var i = 0; i < 5; i++) { %>
        <div class="post-outer">
          <div class="thumb">
            <div class="img-outer">
              <a href="<%- postList[i].url %>"><img src="<%- postList[i].thumbUrl %>" /></a>
            </div><!--img-outer-->
          </div><!--thumb-->
          <div class="post-entry">
            <div class="post-title"><a href="<%- postList[i].url %>"><%- postList[i].title %></a></div>
            <div class="post-date"><%- postList[i].date %></div>
          </div><!--post-entry-->
        </div><!--post-outer-->
      <% } %><!--for-->
    <% } %><!--if-->
    </div><!--index-->
    <div id="pagination" class="pagination">
      <img onclick="util.getPage();" src="/images/more.png" />
    </div>
    <script>
      const util = new Utility();
      util.resize('.index .img-outer');
    </script>
  </div><!--content-->
  <%- include("partials/sidebar.ejs") %>
</div><!--main-content-->

<%- include("partials/footer.ejs") %>