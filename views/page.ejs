<!--views/post.ejs-->
<%- include("partials/header.ejs") %>
<style>
  .post{
    padding:0px;
  }
  .post .post-title{
    font:18px/1.5 Anton, Bayon;
  }
  .post .post-meta{
    font:12px/1.5 Arial, "Odor Mean Chey";
    padding:20px 0;
  }
  .post .post-content{
    font:14px/1.5 "Time New Roman", "Odor Mean Chey";
    perspective: 800px;
  }
  .post .post-content img{
    width:100%;
  }
  .post .post-content td{
    font:12px/1.5 Arial, "Odor Mean Chey";
  }
  .post .quote{
    position:relative;
    margin-top:30px;
    padding:37px;
    overflow:hidden;
    background:url("/images/quote.png");
    background-repeat: no-repeat;
    background-size: 100%;
    /*transform: rotate3d(1, 0, 0, 55deg);*/
  }
  .post .quote .frame{
    overflow:hidden;
    height:310px;
    background:lightgrey;
  }
  .post .quote img{
    min-height:100%;
  }
  .post .quote .sentence{
    position:absolute;
    width:80%;
    color:white;
    text-shadow: 2px 2px 4px #000000;
    font: 20px/1.5 Anton,Koulen;
    top:80%;
    left:50%;
    transform:translate(-50%, -50%);
    /*text-shadow:0px 0px 0 rgb(231,231,231),1px 1px 0 rgb(216,216,216),2px 2px 0 rgb(202,202,202),3px 3px 0 rgb(187,187,187),4px 4px 0 rgb(173,173,173),5px 5px 0 rgb(158,158,158), 6px 6px 0 rgb(144,144,144),7px 7px 6px rgba(0,0,0,0.6),7px 7px 1px rgba(0,0,0,0.5),0px 0px 6px rgba(0,0,0,.2);*/
  }
  .post .quote .sentence .author{
    margin-top:10px;
    font:14px/1.5 Sriracha,"Odor Mean Chey";
    text-align:left;
    text-shadow: 2px 2px 4px #000000;
  }
  .post .quote-round{
    position:relative;
    margin-top:30px;
    padding:0px;
    overflow:hidden;
  }
  .post .quote-round .active-img{
    position:absolute;
    top:49.5%;
    left:50%;
    transform:translate(-50%, -50%);
    border-radius:50%;
    width:80%;
  }
  .post .quote-round .sentence{
    position:absolute;
    width:50%;
    color:white;
    text-shadow: 2px 2px 4px #000000;
    font: 20px/1.5 Anton,Koulen;
    top:75%;
    left:50%;
    transform:translate(-50%, -50%);
    /*text-shadow:0px 0px 0 rgb(231,231,231),1px 1px 0 rgb(216,216,216),2px 2px 0 rgb(202,202,202),3px 3px 0 rgb(187,187,187),4px 4px 0 rgb(173,173,173),5px 5px 0 rgb(158,158,158), 6px 6px 0 rgb(144,144,144),7px 7px 6px rgba(0,0,0,0.6),7px 7px 1px rgba(0,0,0,0.5),0px 0px 6px rgba(0,0,0,.2);*/
  }
  .post .quote-round .sentence .author{
    margin-top:10px;
    font:14px/1.5 Sriracha,"Odor Mean Chey";
    text-align:center;
    text-shadow: 2px 2px 4px #000000;
  }
</style>
<div id="main-content" class="main-content">
  <div id="content" class="content">
    <div id="post" class="post">
    <% if(pageList.length > 0) { %>
      <div class="post-title"><%- pageList[0].title %></div>
      <div class="post-content"><%- pageList[0].content %></div>
    <% } %>
    </div><!--post-->
  </div><!--content-->
  <%- include("partials/sidebar.ejs") %>
</div><!--main-content-->

<%- include("partials/footer.ejs") %>