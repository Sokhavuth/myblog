<!--views/post.ejs-->
<%- include("partials/header.ejs") %>
<style>
  .post{
    padding:0px;
  }
  .post .post-title{
    font:18px/1.5 Anton, Bayon;
  }
  .post .post-meta{
    font:12px/1.5 Arial, "Odor Mean Chey";
    padding:20px 0;
  }
  .post .post-content,#KBPlayer{
    font:14px/1.5 "Time New Roman", "Odor Mean Chey";
    text-align:justify;
  }
  .post .post-content img{
    width:100%;
  }
  .post .post-content td{
    font:12px/1.5 Arial, "Odor Mean Chey";
  }
  
</style>
<div id="main-content" class="main-content">
  <div id="content" class="content">
    <div id="post" class="post">
    <% if(postList.length > 0) { %>
      <div class="post-title"><%- postList[0].title %></div>
      <div class="post-meta"><%- postList[0].date %></div>
      <div id='__KBPlayer__'>
        <div id="post-content" class="post-content">
          <%- postList[0].content %>
        </div><!-- .entry-content -->
      </div><!--__KBPlayer__-->
    <% } %>
    </div><!--post-->

    <script>
    $(document).ready(function(){ 
      var str = $('.post-content').html();
      if(str.indexOf('__video-id__') != -1){
        $('#__KBPlayer__').attr('id', 'KBPlayer');
        const util = new Utility();
        util.setPostVid('post-content','<%- postList[0].id %>'); 
      }
    });
    </script>

    <div id="disqus_thread"></div>
    <script>
    
    (function() { // DON'T EDIT BELOW THIS LINE
    var d = document, s = d.createElement('script');
    s.src = 'https://khmer-js.disqus.com/embed.js';
    s.setAttribute('data-timestamp', +new Date());
    (d.head || d.body).appendChild(s);
    })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

  </div><!--content-->
  <%- include("partials/sidebar.ejs") %>
</div><!--main-content-->

<%- include("partials/footer.ejs") %>