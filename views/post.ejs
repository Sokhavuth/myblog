<!--index.ejs-->
<%- include("partials/header.ejs") %>
<style>
  .post{
    padding:20px;
  }
  .post .post-title{
    font:18px/1.5 Anton, Bayon;
  }
  .post .post-meta{
    font:12px/1.5 Arial, "Odor Mean Chey";
    padding:20px 0;
  }
  .post .post-content{
    font:14px/1.5 "Time New Roman", "Odor Mean Chey";
  }
  .post .post-content img{
    width:100%;
  }
  .post .post-content td{
    font:12px/1.5 Arial, "Odor Mean Chey";
  }
</style>
<div id="main-content" class="main-content">
  <div id="content" class="content">
    <div id="post" class="post">
    <% if(postList.length > 0) { %>
      <div class="post-title"><%- postList[0].title %></div>
      <div class="post-meta">
        <div class="post-author"><%- postList[0].author %></div>
        <div class="post-date"><%- postList[0].date %></div>
      </div><!--post-meta-->
      <div class="post-content"><%- postList[0].content %></div>
    <% } %>
    </div><!--post-->
  </div><!--content-->
  <%- include("partials/sidebar.ejs") %>
</div><!--main-content-->

<%- include("partials/footer.ejs") %>